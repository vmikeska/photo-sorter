<Window x:Class="photo_sorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photo_sorter"
        mc:Ignorable="d"
        AllowDrop="True"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image 
            x:Name="MainImage" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Grid.Row="0" 
            Grid.Column="0"
            />

        <StackPanel 
            x:Name="ActionsPanel"
            Grid.Row="0" 
            Grid.Column="1"
            >
            <Button Click="openDialogClick" Margin="5,5,5,10" FontSize="25">Load directory</Button>
            <Button Click="backClick" Margin="5,5,5,10" FontSize="25">Back</Button>
            <Button Click="nextClick" Margin="5,5,5,30" FontSize="25">Next</Button>

            <TextBlock x:Name="PosInfo" Text="pos"></TextBlock>

            

            
        </StackPanel>

    </Grid>
  
       
      


</Window>
