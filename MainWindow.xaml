<Window x:Class="photo_sorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photo_sorter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image 
            x:Name="MainImage" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Grid.Row="0" 
            Grid.Column="0"
            />

        <StackPanel 
            Grid.Row="0" 
            Grid.Column="1"
            >
            <Button Click="openDialogClick">Load directory</Button>
            <Button Click="backClick">Back</Button>
            <Button Click="nextClick">Next</Button>

            <Button Click="yesClick">YES</Button>
            <Button Click="noClick">NO</Button>
        </StackPanel>

    </Grid>
  
       
      


</Window>
